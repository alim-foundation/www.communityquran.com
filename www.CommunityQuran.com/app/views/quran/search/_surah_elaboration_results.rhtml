<table class="subjects">
    <% for result in @surah_elaboration_results %>
        <tr class="subject" valign="top">
            <td class="location">
                <a href="<%= url_for :controller => 'Quran::Surah', :action => 'elaborate_surah', :quran_code => result[:quran_code], :surah_num => result[:surah_num] %>">
                    Surah <%= result[:surah_num] %>
                </a>
            </td>
            <td class="topic">
                <%= result[:excerpt] %>
            </td>
        </tr>
    <% end %>
</table>
